<h1>Recipe Index</h1>
<br></br>
<% @recipes.each do |recipe| %>
  <strong><label for="name">Name:</label></strong>
  <h2><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h2>
  <br></br>
  <strong><label for="ingredients">Ingredients:</label></strong>
  <p><%= recipe.ingredients %></p>
  <br></br>
  <strong><label for="instructions">Instructions:</label></strong>
  <p><%= recipe.instructions %></p>
  <br></br>
  <p>By <%= recipe.user.name %></p>
  <br></br>
  <h5><label for="created_at">Created:</label></h5>
  <h6><%= recipe.created_at %></h6>
  <br></br>
<% end %>