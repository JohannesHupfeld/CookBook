<h1>Recipe Index</h1>
<br></br>
<% @recipes.each do |recipe| %>
  <h3><label for="name">Name:</label></h3>
  <h2><%= recipe.name %></h2>
  <br></br>
  <h3><label for="ingredients">Ingredients:</label></h3>
  <h4><%= recipe.ingredients %></h4>
  <br></br>
  <h3><label for="instructions">Instructions:</label></h3>
  <h4><%= recipe.instructions %></h4>
  <br></br>
  <h6><%= recipe.created_at %></h6>
  <br></br>
<% end %>