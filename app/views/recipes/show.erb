<h2>Recipes</h2>

<h3>Name:</h3>
<h4><%= @recipe.name %></h4>
<h3>Ingredients:</h3>
<h4><%= @recipe.ingredients %></h4>
<h3>Instructions:</h3>
<h4><%= @recipe.instructions %></h4>

<% if authorized_to_edit?(@recipe) %>
  <br><a href="recipes/<%= @recipe.id %>/edit">Edit Recipe</a></br>
  <br></br>
  <form class="" action="recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" name="" value="Delete Recipe">
  </form>
<% end %>
